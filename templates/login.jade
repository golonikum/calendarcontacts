extends ./base_login.jade

block content
    div(class='panel-body')
        if message
            p(class='text-danger').
                #{message}
        form(method='post', action='/login')
            div(class='form-group')
                label(for='username') Логин
                input(type='text', class='form-control', name='username', id='id_username', placeholder='Логин')
            div(class='form-group')
                label(for='password') Пароль
                input(type='password', class='form-control', name='password', id='id_password', placeholder='Пароль')
            button(type='submit', class='btn btn-default') Войти
